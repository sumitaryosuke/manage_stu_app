<!DOCTYPE html>
<html>
  <head>
    <title>すみた塾</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <header class="header">
      <div class="inner">
          <div class="pagename">
            <h1 class="title" >
            <%= link_to "すみた塾", root_path %>
            </h1>
          </div>
        <div class="nav">
          <ul class="top-menu">
            <% if user_signed_in? %>
              <li>
                <%= link_to "イベント一覧", root_path %>
              </li>
              <li>
                <%= link_to "点数入力", user_path(@user.id) %>
              </li>
              <li>
                <%= link_to "お問い合わせ", root_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
              <li>
                <%= link_to "管理者", managers_path %>
              </li>
            <% else %>
              <li>
                <%= link_to "ログイン", new_user_session_path %>
              </li>
              <li>
                <%= link_to "新規登録", new_user_registration_path, method: :get %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <p class="copyright">Copyright ©  すみた塾 All rights reserved.</p>
    </footer>
  </body>
</html>
